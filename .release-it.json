{
  "git": {
    "requireBranch": "master",
    "commitArgs": ["--no-verify"],
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull"],
    "after:bump": ["npx auto-changelog -p"]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}
